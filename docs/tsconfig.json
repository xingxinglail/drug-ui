{
    "extends": "../tsconfig",
    "compilerOptions": {
        "module": "esnext",
        "target": "es6",
        "paths": {
            "@drug-ui/core": [
                "./drug-ui/src"
            ],
            "@drug-ui/core/*": [
                "./drug-ui/src/*"
            ],
            "@drug-ui/styles": [
                "./drug-ui-styles/src"
            ],
            "@drug-ui/styles/*": [
                "./drug-ui-styles/src/*"
            ],
            "@drug-ui/icons": [
                "./drug-ui-icons/src"
            ],
            "@drug-ui/icons/*": [
                "./drug-ui-icons/src/*"
            ],
            "@drug-ui/hooks": [
                "./drug-ui-hooks/src"
            ],
            "@drug-ui/hooks/*": [
                "./drug-ui-hooks/src/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}
