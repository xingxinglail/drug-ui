{
    "name": "root",
    "private": true,
    "workspaces": [
        "packages/*",
        "docs"
    ],
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "test": "cross-env NODE_ENV=test JEST_JUNIT_OUTPUT_DIR=./test-results/jest/ JEST_JUNIT_OUTPUT_NAME=results.xml jest --config=jest.config.js --runInBand --watchAll",
        "docs:start": "yarn workspace docs start",
        "docs:build": "yarn workspace docs build:docs",
        "ci": "cross-env NODE_ENV=test JEST_JUNIT_OUTPUT_DIR=./test-results/jest/ JEST_JUNIT_OUTPUT_NAME=results.xml jest --config=jest.config.ci.js",
        "commit": "npx git-cz",
        "build": "lerna run build",
        "release": "yarn run build && lerna publish from-package --contents build"
    },
    "devDependencies": {
        "@babel/cli": "^7.5.5",
        "@babel/core": "^7.5.5",
        "@babel/plugin-proposal-optional-chaining": "^7.7.5",
        "@babel/preset-env": "^7.5.5",
        "@babel/preset-react": "^7.0.0",
        "@babel/preset-typescript": "^7.3.3",
        "@types/enzyme": "^3.10.4",
        "@types/jest": "^24.0.9",
        "@types/prop-types": "^15.7.3",
        "@types/react": "^16.9.4",
        "@types/react-dom": "^16.9.4",
        "@types/react-test-renderer": "^16.8.1",
        "awesome-typescript-loader": "^5.2.1",
        "babel-jest": "^24.3.1",
        "babel-plugin-module-resolver": "^3.2.0",
        "babel-preset-react-app": "^9.0.2",
        "commitizen": "^4.0.3",
        "cross-env": "^6.0.3",
        "css-loader": "^3.2.0",
        "cz-lerna-changelog": "^2.0.2",
        "enzyme": "^3.10.0",
        "enzyme-adapter-react-16": "^1.15.1",
        "html-webpack-plugin": "^3.2.0",
        "jest": "^24.3.1",
        "jest-junit": "^9.0.0",
        "lerna": "^3.18.4",
        "prop-types": "^15.7.2",
        "react": "^16.9.0",
        "react-dom": "^16.9.0",
        "react-test-renderer": "16.8.4",
        "style-loader": "^1.0.0",
        "svg-sprite-loader": "^4.1.6",
        "ts-jest": "^24.0.0",
        "ts-node": "^8.3.0",
        "typescript": "^3.7.2",
        "webpack": "^4.29.6",
        "webpack-cli": "^3.2.3",
        "webpack-dev-server": "^3.2.1"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-lerna-changelog"
        }
    }
}
