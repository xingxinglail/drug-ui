{
    "name": "root",
    "private": true,
    "workspaces": [
        "packages/*",
        "docs"
    ],
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "test": "cross-env NODE_ENV=test JEST_JUNIT_OUTPUT_DIR=./test-results/jest/ JEST_JUNIT_OUTPUT_NAME=results.xml jest --config=jest.config.ci.js",
        "test:dev": "cross-env NODE_ENV=test JEST_JUNIT_OUTPUT_DIR=./test-results/jest/ JEST_JUNIT_OUTPUT_NAME=results.xml jest --config=jest.config.js --runInBand --watchAll",
        "docs:start": "yarn workspace docs start",
        "docs:dev": "yarn workspace docs dev",
        "docs:build": "yarn workspace docs build:docs",
        "docs:report": "yarn workspace docs report:docs",
        "commit": "npx git-cz",
        "build": "lerna run build",
        "release": "yarn run build && lerna publish from-package --contents build"
    },
    "devDependencies": {
        "@babel/cli": "^7.5.5",
        "@babel/core": "^7.8.3",
        "@babel/plugin-proposal-optional-chaining": "^7.7.5",
        "@babel/plugin-transform-runtime": "^7.8.3",
        "@babel/preset-env": "^7.5.5",
        "@babel/preset-react": "^7.0.0",
        "@babel/preset-typescript": "^7.3.3",
        "@types/enzyme": "^3.10.4",
        "@types/jest": "^24.0.9",
        "@types/marked": "^0.7.2",
        "@types/nprogress": "^0.2.0",
        "@types/prismjs": "^1.16.0",
        "@types/prop-types": "^15.7.3",
        "@types/react": "^16.9.4",
        "@types/react-dom": "^16.9.4",
        "@types/react-router-dom": "^5.1.3",
        "@types/react-test-renderer": "^16.8.1",
        "@types/webpack-env": "^1.15.0",
        "awesome-typescript-loader": "^5.2.1",
        "babel-jest": "^24.3.1",
        "babel-loader": "^8.0.6",
        "babel-plugin-module-resolver": "^3.2.0",
        "babel-preset-react-app": "^9.0.2",
        "clean-webpack-plugin": "^3.0.0",
        "commitizen": "^4.0.3",
        "copy-webpack-plugin": "^5.1.1",
        "cross-env": "^6.0.3",
        "css-loader": "^3.2.0",
        "cz-lerna-changelog": "^2.0.2",
        "docsearch.js": "^2.6.3",
        "enzyme": "^3.10.0",
        "enzyme-adapter-react-16": "^1.15.1",
        "enzyme-to-json": "^3.4.3",
        "glob": "^7.1.6",
        "html-webpack-plugin": "^3.2.0",
        "jest": "^24.3.1",
        "jest-junit": "^9.0.0",
        "lerna": "^3.18.4",
        "prerender-spa-plugin": "^3.4.0",
        "prop-types": "^15.7.2",
        "react": "^16.9.0",
        "react-dom": "^16.9.0",
        "react-test-renderer": "^16.12.0",
        "style-loader": "^1.0.0",
        "svg-sprite-loader": "^4.1.6",
        "ts-jest": "^24.0.0",
        "ts-node": "^8.3.0",
        "typescript": "^3.8.2",
        "url-loader": "^3.0.0",
        "webpack": "^4.29.6",
        "webpack-bundle-analyzer": "^3.6.0",
        "webpack-cli": "^3.2.3",
        "webpack-dev-server": "^3.2.1"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-lerna-changelog"
        }
    },
    "dependencies": {
        "marked": "^0.8.0",
        "nprogress": "^0.2.0",
        "prismjs": "^1.19.0",
