{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "lib": ["es6", "dom"],
        "jsx": "react",
        "declaration": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": false,
        "strict": true,
        "experimentalDecorators": true,
        "noErrorTruncation": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "baseUrl": "./packages"
    },
    "exclude": [
        "**/build/",
        "node_modules",
        "docs",
        "scripts",
        "dist",
        "build",
        "public",
        "**/*.test.ts",
        "**/*.test.tsx"
    ]
}
