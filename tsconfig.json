{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "lib": [
            "es2019",
            "dom"
        ],
        "jsx": "react",
        "declaration": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": false,
        "strict": true,
        "experimentalDecorators": true,
        "noErrorTruncation": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "baseUrl": "./packages",
        "allowJs": true
    },
    "include": [
        "./types"
    ],
    "exclude": [
        "**/build/",
        "node_modules",
        "scripts",
        "dist",
        "build",
        "public",
        "**/*.test.ts",
        "**/*.test.tsx"
    ]
}
