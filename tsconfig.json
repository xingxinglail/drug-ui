{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "lib": [
            "es6",
            "dom"
        ],
        "jsx": "react",
        "declaration": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": false,
        "strict": true,
        "experimentalDecorators": true,
        "noErrorTruncation": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "baseUrl": "./packages",
        "allowJs": true,
        "paths": {
            "@drug-ui/core": [
                "./drug-ui/src"
            ],
            "@drug-ui/core/*": [
                "./drug-ui/src/*"
            ],
            "@drug-ui/styles": [
                "./drug-ui-styles/src"
            ],
            "@drug-ui/styles/*": [
                "./drug-ui-styles/src/*"
            ],
            "@drug-ui/icons": [
                "./drug-ui-icons/src"
            ],
            "@drug-ui/icons/*": [
                "./drug-ui-icons/src/*"
            ]
        }
    },
    "exclude": [
        "**/build/",
        "node_modules",
        "docs",
        "scripts",
        "dist",
        "build",
        "public",
        "**/*.test.ts",
        "**/*.test.tsx"
    ]
}
